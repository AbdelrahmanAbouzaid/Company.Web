@model IEnumerable<Department>
@{
    ViewData["Title"] = "Index";
}

<h1>Departments</h1>
<br />
<a asp-action="Create" class="btn btn-primary">Create Department</a>
<br />

@if (Model.Count() > 0)
{
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>Code</th>
                <th>Name</th>
                <th>CreateAt</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Code </td>
                    <td>@item.Name </td>
                    <td>@item.CreateAt </td>
                    <td>
                        <a asp-action="Details" class="btn btn-secondary">Details</a>
                    </td>
                    <td>
                        <a asp-action="Update" class="btn btn-success">Update</a>
                    </td>
                    <td>
                        <a asp-action="Delete" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="my-4 alert alert-info">
        <h4>There is no Department :(</h4>
    </div>
}

