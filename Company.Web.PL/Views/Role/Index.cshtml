
@model IEnumerable<RoleToReturnDto>
@{
    ViewData["Title"] = "Index";
}


<h1>Roles</h1>
<form>
    <div>
        <input type="text" placeholder="Search" name="searchInput" class="form-control" />
        <input type="submit" value="Search" class="btn btn-success my-3" />

    </div>
</form>
<hr />
<a asp-action="Create" class="btn btn-primary">Create Role</a>
<br />

@if (Model.Count() > 0)
{
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-Id="@item.Id" class="btn btn-secondary">Details</a>
                        <a asp-action="Edit" asp-route-Id="@item.Id" class="btn btn-success">Update</a>
                        <a asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="my-4 alert alert-info">
        <h4>There is no Employee :(</h4>
    </div>
}

