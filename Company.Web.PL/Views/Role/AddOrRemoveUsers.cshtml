@model List<UserInRoleDto>

@{
    ViewData["Title"] = "AddOrRemoveUsers";
}

<h1>Add Or Remove User</h1>
<hr />
<div class="row">
    <form asp-action="AddOrRemoveUsers" >
        @for (int i=0; i < Model.Count; i++)
        {
            <div class="from-group">
                <input asp-for="@Model[i].UserId" hidden/>
                <input asp-for="@Model[i].UserName" hidden />
                <input asp-for="@Model[i].IsSelected"  />
                <label asp-for="@Model[i].UserName">@Model[i].UserName </label>
            </div>
        }
        <input type="submit" value="Update" class="btn btn-success" />
        <a asp-action="Edit" class="btn btn-light">Cancel</a>
    </form>
</div>